{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "compilerOptions": {
    "lib": ["dom", "es6", "dom.iterable", "scripthost"],
    "module": "commonjs",
    "target": "es5",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "lib",
    "declaration": true
  },

  "include": ["src/**/*"]
}